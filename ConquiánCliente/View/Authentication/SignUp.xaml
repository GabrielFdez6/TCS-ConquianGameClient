<Window x:Class="ConquiánCliente.View.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente.View"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.GlobalSignUp}" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Grid>
        <Image Source="/Resources/backgroundLogin.jpg" 
               Stretch="UniformToFill" 
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch"/>

        <Border BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="2" 
                Background="{StaticResource PrimaryBackgroundBrush}" 
                CornerRadius="10" 
                Padding="35" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MaxWidth="600" Width="389">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" 
                                  Color="Black" 
                                  Opacity="0.25" 
                                  BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Static language:Lang.GlobalSignUp}" 
                           Style="{StaticResource TitleTextBlock}"
                           Margin="0,0,0,30"/>

                <TextBlock Text="{x:Static language:Lang.GlobalEmail}" 
                           FontSize="16" 
                           Margin="0,0,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <TextBox x:Name="tbEmail" 
                             Padding="8" 
                             FontSize="16"
                             BorderThickness="0"
                             Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <TextBlock Text="{x:Static language:Lang.GlobalPassword}" 
                           FontSize="16" 
                           Margin="0,20,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <PasswordBox x:Name="pbPassword" 
                                 Padding="8" 
                                 FontSize="16" 
                                 BorderThickness="0"
                                 Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <TextBlock Text="{x:Static language:Lang.GlobalConfirmPassword}" 
                           FontSize="16" 
                           Margin="0,20,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <PasswordBox x:Name="pbConfirmPassowrd" 
                                 Padding="8" 
                                 FontSize="16" 
                                 BorderThickness="0"
                                 Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <Button Margin="0,30,0,10" Height="43" Width="168" Click="ClickSignUp" Style="{StaticResource PrimaryButtonStyle}">
                        <TextBlock Text="{x:Static language:Lang.GlobalSignUp}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Style="{StaticResource NoFocusButtonStyle}" Click="ClickLogIn" Margin="0,25,0,0">
                    <TextBlock Text="{x:Static language:Lang.GlobalLogIn}"
                               Foreground="{StaticResource ForgotPasswordTextBrush}"
                               FontSize="14"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>