<Window x:Class="ConquiánCliente.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.GlobalLogIn}" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Grid>
        <Image Source="/Resources/backgroundLogin.jpg" 
               Stretch="UniformToFill" 
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch"/>

        <Border BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="2" 
                Background="{StaticResource PrimaryBackgroundBrush}" 
                CornerRadius="10" 
                Padding="35" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MaxWidth="600" Width="389">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" 
                                  Color="Black" 
                                  Opacity="0.25" 
                                  BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Static language:Lang.GlobalLogIn}" 
                           Style="{StaticResource TitleTextBlock}"
                           Margin="0,0,0,30"/>

                <TextBlock Text="{x:Static language:Lang.GlobalEmail}" 
                           FontSize="16" 
                           Margin="0,0,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>

                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <TextBox x:Name="txtBoxEmail" 
                             Padding="8" 
                             FontSize="16"
                             BorderThickness="0"
                             Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <TextBlock Text="{x:Static language:Lang.GlobalPassword}" 
                           FontSize="16" 
                           Margin="0,20,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>

                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <PasswordBox x:Name="pbPassword" 
                                 Padding="8" 
                                 FontSize="16" 
                                 BorderThickness="0"
                                 Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <Button Margin="0,30,0,10" Height="43" Width="168" Click="ClickLogIn" Style="{StaticResource PrimaryButtonStyle}">
                        <TextBlock Text="{x:Static language:Lang.GlobalLogIn}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Margin="0,5,0,15" Height="43" Width="168" Style="{StaticResource SecondaryButtonStyle}">
                    <TextBlock Text="{x:Static language:Lang.LogInAsGuess}" 
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Style="{StaticResource NoFocusButtonStyle}" Click="ClickSignUp" Margin="0,25,0,0">
                    <TextBlock Text="{x:Static language:Lang.GlobalSignUp}" 
                               Foreground="{StaticResource PrimaryColorBrush}" 
                               FontSize="14"/>
                </Button>

                <Button Style="{StaticResource NoFocusButtonStyle}" Click="ClickForgotPassword" Margin="0,15,0,0">
                    <TextBlock Text="{x:Static language:Lang.LogInForgotPassword}" 
                               Foreground="{StaticResource ForgotPasswordTextBrush}" 
                               FontSize="14"/>
                </Button>

            </StackPanel>
        </Border>

        <ComboBox Name="cbxLanguageChanged"
                  SelectionChanged="CbxSelectionChanged" 
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Right"
                  Margin="0,0,15,10"
                  Padding="8,4"
                  Foreground="{StaticResource PrimaryTextBrush}"
                  Background="{StaticResource PrimaryBackgroundBrush}"
                  BorderBrush="{StaticResource BorderBrush}">
            <ComboBoxItem Content="{x:Static language:Lang.GlobalLanguage}" IsEnabled="False" IsSelected="True"/>
            <ComboBoxItem Content="{x:Static language:Lang.es}"/>
            <ComboBoxItem Content="{x:Static language:Lang.en}"/>
        </ComboBox>
    </Grid>
</Window>