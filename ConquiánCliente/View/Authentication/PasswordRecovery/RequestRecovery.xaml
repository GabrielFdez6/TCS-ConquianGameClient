<Page x:Class="ConquiánCliente.View.Authentication.PasswordRecovery.RequestRecovery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente.View.Authentication.PasswordRecovery"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.GlobalPasswordRecovery}" Height="600" Width="444"
        Background="Transparent">
    <Grid>
        <Border BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="2" 
                Background="{StaticResource PrimaryBackgroundBrush}" 
                CornerRadius="10" 
                Padding="35" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MaxWidth="600" Width="444">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" 
                                  Color="Black" 
                                  Opacity="0.25" 
                                  BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Static language:Lang.GlobalPasswordRecovery}" 
                           Style="{StaticResource TitleTextBlock}"
                           Margin="0,0,0,30"/>

                <TextBlock Text="{x:Static language:Lang.RecoveryInfo}" 
                           FontSize="14" 
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource PrimaryTextBrush}"/>

                <TextBlock Text="{x:Static language:Lang.GlobalEmail}" 
                           FontSize="16" 
                           Margin="0,0,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <TextBox x:Name="txtBxEmail" 
                             Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8" 
                             FontSize="16"
                             BorderThickness="0"
                             Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <Button Margin="0,30,0,10" Height="43" Width="168" Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding RequestRecoveryCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}">
                        <TextBlock Text="{x:Static language:Lang.GlobalAccept}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Style="{StaticResource NoFocusButtonStyle}" Margin="0,15,0,0"
                        Command="{Binding NavigateToLoginCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}">
                    <TextBlock Text="{x:Static language:Lang.GlobalBack}"
                               Foreground="{StaticResource ForgotPasswordTextBrush}"
                               FontSize="14"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>