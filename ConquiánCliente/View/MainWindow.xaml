<Window x:Class="ConquiánCliente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente"
        mc:Ignorable="d"
        Title="Log in" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Grid>
        <Image Source="/Resources/backgroundLogin.jpg" 
               Stretch="UniformToFill" 
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch"/>

        <Border BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="2" 
                Background="{StaticResource PrimaryBackgroundBrush}" 
                CornerRadius="10" 
                Padding="35" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MaxWidth="600" Width="389">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" 
                                  Color="Black" 
                                  Opacity="0.25" 
                                  BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Inicio de sesión" 
                           Style="{StaticResource TitleTextBlock}"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Correo electrónico" 
                           FontSize="16" 
                           Margin="0,0,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>

                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <TextBox x:Name="EmailTextBox" 
                             Padding="8" 
                             FontSize="16"
                             BorderThickness="0"
                             Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <TextBlock Text="Contraseña" 
                           FontSize="16" 
                           Margin="0,20,0,8"
                           Foreground="{StaticResource PrimaryTextBrush}"/>

                <Border CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <PasswordBox x:Name="PasswordBox" 
                                 Padding="8" 
                                 FontSize="16" 
                                 BorderThickness="0"
                                 Background="{StaticResource TextBoxBackgroundBrush}"/>
                </Border>

                <Button Margin="0,30,0,10" Width="168">
                    <Border Background="{StaticResource PrimaryButtonBrush}" CornerRadius="5" Padding="12" Width="165">
                        <TextBlock Text="Iniciar sesión" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>
                </Button>

                <Button Margin="0,5,0,15" Width="168">
                    <Border Background="{StaticResource SecondaryButtonBrush}" CornerRadius="5" Padding="12" Width="165">
                        <TextBlock Text="Jugar como invitado" 
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>
                </Button>

                <Button Content="Registrarse" 
                        Foreground="{StaticResource PrimaryColorBrush}" 
                        FontSize="14"
                        Margin="0,25,0,0"/>

                <Button Content="¿Olvidaste tu contraseña?"
                        Foreground="{StaticResource ForgotPasswordTextBrush}" 
                        FontSize="14"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Border>

        <ComboBox VerticalAlignment="Bottom"
                  HorizontalAlignment="Right"
                  Margin="0,0,15,10"
                  SelectedIndex="0"
                  Padding="8,4"
                  Foreground="{StaticResource PrimaryTextBrush}"
                  Background="{StaticResource PrimaryBackgroundBrush}"
                  BorderBrush="{StaticResource BorderBrush}">
            <ComboBoxItem Content="Español"/>
            <ComboBoxItem Content="Inglés"/>
        </ComboBox>

    </Grid>
</Window>