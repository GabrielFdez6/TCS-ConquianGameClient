<Window x:Class="ConquiánCliente.View.MainMenu.ChangeLanguage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        Title="{x:Static language:Lang.GlobalLanguage}"
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#F9D379"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent">
            <Button Width="300" Height="80" Margin="0,10,0,10" Style="{StaticResource PrimaryButtonStyle}" Click="ClickSpanish">
                <Button.Effect>
                    <DropShadowEffect Color="#A43C42" BlurRadius="10" ShadowDepth="2" Opacity="1"/>
                </Button.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Resources/MexicoFlag.png" Width="150" Height="70" Margin="0,0,0,0"/>
                    <TextBlock Text="Español" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Width="300" Height="80" Margin="0,10,0,10" Style="{StaticResource PrimaryButtonStyle}" Click="ClickEnglish">
                <Button.Effect>
                    <DropShadowEffect Color="#A43C42" BlurRadius="10" ShadowDepth="2" Opacity="1"/>
                </Button.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Resources/USAFlag.png" Width="150" Height="70" Margin="0,0,0,0"/>
                    <TextBlock Text="English" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
