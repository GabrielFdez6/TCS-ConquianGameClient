<Window x:Class="ConquiánCliente.View.MainMenu.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente.View.MainMenu"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.MainMenu}"
        Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">

    <Grid>
        <Image Source="/Resources/backgroundMainMenu.png" 
               Stretch="UniformToFill" 
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch"/>
        <Grid>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Margin="20">
                <Border Width="50" Height="50" 
                        BorderBrush="Gray" BorderThickness="1"
                        Background="Transparent">
                    <Image/>
                </Border>
                <TextBlock Text="{x:Static language:Lang.GlobalNickname}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="20"
                           Foreground="White"
                           FontWeight="Bold"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="500"
                        Margin="0,-500,0,0"
                        >
                <TextBlock Text="Conquián"
                           FontSize="100"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,60"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="290"
                        Width="400"
                        Margin="0,200,0,0"
                        Background="Transparent">
                
                <Button Width="388" Height="62" Margin="0,15,0,0" Style="{StaticResource PrimaryButtonStyle}" Click="ClickPlay">
                    <Button.Effect>
                        <DropShadowEffect Color="#A43C42" BlurRadius="10" ShadowDepth="2" Opacity="1"/>
                    </Button.Effect>
                    <TextBlock Text="{x:Static language:Lang.MainMenuPlay}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Width="388" Height="62" Margin="0,30,0,0" Style="{StaticResource PrimaryButtonStyle}">
                    <Button.Effect>
                        <DropShadowEffect Color="#A43C42" BlurRadius="10" ShadowDepth="2" Opacity="1"/>
                    </Button.Effect>
                    <TextBlock Text="{x:Static language:Lang.MainMenuFriends}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Width="388" Height="62" Margin="0,30,0,0" Style="{StaticResource PrimaryButtonStyle}" Click="ClickChangeLanguage">
                    <Button.Effect>
                        <DropShadowEffect Color="#A43C42" BlurRadius="10" ShadowDepth="2" Opacity="1"/>
                    </Button.Effect>
                    <TextBlock Text="{x:Static language:Lang.GlobalLanguage}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
