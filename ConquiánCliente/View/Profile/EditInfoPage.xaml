<Page x:Class="ConquiánCliente.View.Profile.EditInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ConquiánCliente.View"
      xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
      xmlns:viewModel="clr-namespace:ConquiánCliente.ViewModel.Profile"
      mc:Ignorable="d"
      Background="Transparent">

    <Grid>
        <Border BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="2"
                Background="{StaticResource PrimaryBackgroundBrush}"
                CornerRadius="10"
                Padding="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="600" MinWidth="550">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" Color="Black" Opacity="0.25" BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Static language:Lang.EditDataEdit}" 
                           Style="{StaticResource TitleTextBlock}" 
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="{x:Static language:Lang.GlobalNickname}" FontWeight="Bold" Margin="0,5,20,5" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <Border Grid.Row="0" Grid.Column="1" CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}" Margin="0,5">
                        <TextBox Text="{Binding Player.nickname}" Padding="8" FontSize="16" BorderThickness="0" Background="{StaticResource TextBoxBackgroundBrush}"/>
                    </Border>

                    <Label Grid.Row="1" Grid.Column="0" Content="{x:Static language:Lang.GlobalName}" FontWeight="Bold" Margin="0,5,20,5" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <Border Grid.Row="1" Grid.Column="1" CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}" Margin="0,5">
                        <TextBox Text="{Binding Player.name}" Padding="8" FontSize="16" BorderThickness="0" Background="{StaticResource TextBoxBackgroundBrush}"/>
                    </Border>

                    <Label Grid.Row="2" Grid.Column="0" Content="{x:Static language:Lang.GlobalLastName}" FontWeight="Bold" Margin="0,5,20,5" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <Border Grid.Row="2" Grid.Column="1" CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}" Margin="0,5">
                        <TextBox Text="{Binding Player.lastName}" Padding="8" FontSize="16" BorderThickness="0" Background="{StaticResource TextBoxBackgroundBrush}"/>
                    </Border>

                    <Label Grid.Row="3" Grid.Column="0" Content="{x:Static language:Lang.GlobalEmail}" FontWeight="Bold" Margin="0,5,20,5" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <Border Grid.Row="3" Grid.Column="1" CornerRadius="5" BorderThickness="1" Margin="0,5">
                        <TextBox Text="{Binding Player.email}" Padding="8" FontSize="16" BorderThickness="0" 
                                 Background="{StaticResource TextBoxBackgroundBrush}" IsReadOnly="True" Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>

                    <Label Grid.Row="4" Grid.Column="0" Content="{x:Static language:Lang.GlobalPassword}" FontWeight="Bold" Margin="0,5,20,5" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <Border Grid.Row="4" Grid.Column="1" CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}" Margin="0,5">
                        <PasswordBox x:Name="pbPassword" Padding="8" FontSize="16" BorderThickness="0" Background="{StaticResource TextBoxBackgroundBrush}"/>
                    </Border>

                    <Image Grid.Row="5" Grid.Column="0" Source="/Resources/facebook.png" Width="24" Height="24" Margin="0,5,20,5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <Border Grid.Row="5" Grid.Column="1" CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}" Margin="0,5">
                        <TextBox Text="{Binding FacebookLink}" Padding="8" FontSize="16" BorderThickness="0" Background="{StaticResource TextBoxBackgroundBrush}"/>
                    </Border>

                    <Image Grid.Row="6" Grid.Column="0" Source="/Resources/instagram.png" Width="24" Height="24" Margin="0,5,20,5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <Border Grid.Row="6" Grid.Column="1" CornerRadius="5" BorderThickness="1" BorderBrush="{StaticResource TextBoxBorderBrush}" Margin="0,5">
                        <TextBox Text="{Binding InstagramLink}" Padding="8" FontSize="16" BorderThickness="0" Background="{StaticResource TextBoxBackgroundBrush}"/>
                    </Border>
                </Grid>

                <Button Margin="0,30,0,10" Style="{StaticResource PrimaryButtonStyle}" Width="165" Height="40"
                        Command="{Binding SaveChangesCommand}"
                        CommandParameter="{Binding ElementName=pbPassword}">
                    <TextBlock Text="{x:Static language:Lang.EditDataEdit}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Content="{x:Static language:Lang.GlobalBack}"
                        Foreground="{StaticResource ForgotPasswordTextBrush}" 
                        FontSize="14"
                        Margin="0,15,0,0"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>