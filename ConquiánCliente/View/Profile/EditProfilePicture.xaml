<Window x:Class="ConquiánCliente.View.Profile.EditProfilePicture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente.View.Profile"
        xmlns:viewModel="clr-namespace:ConquiánCliente.ViewModel.Profile"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.ProfileChange}" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">

    <Window.DataContext>
        <viewModel:EditProfilePictureViewModel/>
    </Window.DataContext>

    <Grid>
        <Image Source="/Resources/backgroundLogin.jpg" Stretch="UniformToFill" />

        <Border BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="2"
                Background="{StaticResource PrimaryBackgroundBrush}"
                CornerRadius="10"
                Padding="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="600">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" Color="Black" Opacity="0.25" BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Static language:Lang.ProfileChange}" 
                           Style="{StaticResource TitleTextBlock}" 
                           Margin="0,0,0,30"/>

                <WrapPanel HorizontalAlignment="Center" MaxWidth="400">

                    <Button Command="{Binding SelectImageCommand}" CommandParameter="/Resources/imageProfile/avatar01.JPG" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                            <Image Source="/Resources/imageProfile/avatar01.JPG" Stretch="UniformToFill"/>
                        </Border>
                    </Button>
                    <Button Command="{Binding SelectImageCommand}" CommandParameter="/Resources/imageProfile/avatar02.JPG" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                            <Image Source="/Resources/imageProfile/avatar02.JPG" Stretch="UniformToFill"/>
                        </Border>
                    </Button>
                    <Button Command="{Binding SelectImageCommand}" CommandParameter="/Resources/imageProfile/avatar03.JPG" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                            <Image Source="/Resources/imageProfile/avatar03.JPG" Stretch="UniformToFill"/>
                        </Border>
                    </Button>
                    <Button Command="{Binding SelectImageCommand}" CommandParameter="/Resources/imageProfile/avatar04.JPG" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                            <Image Source="/Resources/imageProfile/avatar04.JPG" Stretch="UniformToFill"/>
                        </Border>
                    </Button>
                    <Button Command="{Binding SelectImageCommand}" CommandParameter="/Resources/imageProfile/avatar05.JPG" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                            <Image Source="/Resources/imageProfile/avatar05.JPG" Stretch="UniformToFill"/>
                        </Border>
                    </Button>
                    <Button Command="{Binding SelectImageCommand}" CommandParameter="/Resources/imageProfile/avatar06.JPG" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                            <Image Source="/Resources/imageProfile/avatar06.JPG" Stretch="UniformToFill"/>
                        </Border>
                    </Button>
                </WrapPanel>

                <Button Command="{Binding ChangeProfilePictureCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,30,0,10" Width="165" Height="40">
                    <TextBlock Text="{x:Static language:Lang.ProfileChange}" 
                               FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Command="{Binding CloseWindowCommand}" Content="{x:Static language:Lang.GlobalBack}"
                        Foreground="{StaticResource ForgotPasswordTextBrush}" 
                        FontSize="14" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>