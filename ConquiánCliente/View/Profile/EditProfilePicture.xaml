<Window x:Class="ConquiánCliente.View.EditProfilePicture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente.View"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.ProfileChange}" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Grid>
        <Image Source="/Resources/backgroundLogin.jpg" Stretch="UniformToFill" />

        <Border BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="2"
                Background="{StaticResource PrimaryBackgroundBrush}"
                CornerRadius="10"
                Padding="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="600">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" Color="Black" Opacity="0.25" BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Static language:Lang.ProfileChange}" 
                           Style="{StaticResource TitleTextBlock}" 
                           Margin="0,0,0,30"/>

                <WrapPanel HorizontalAlignment="Center" MaxWidth="400">
                    <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                        <Image x:Name="ProfileImage1" />
                    </Border>
                    <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                        <Image x:Name="ProfileImage2" />
                    </Border>
                    <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                        <Image x:Name="ProfileImage3" />
                    </Border>
                    <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                        <Image x:Name="ProfileImage4" />
                    </Border>
                    <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                        <Image x:Name="ProfileImage5" />
                    </Border>
                    <Border Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="10">
                        <Image x:Name="ProfileImage6" />
                    </Border>
                </WrapPanel>

                <Button Style="{StaticResource PrimaryButtonStyle}" Margin="0,30,0,10" Width="165" Height="40">
                    <TextBlock Text="{x:Static language:Lang.ProfileChange}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <Button Content="{x:Static language:Lang.GlobalBack}"
                        Foreground="{StaticResource ForgotPasswordTextBrush}" 
                        FontSize="14"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>