<Window x:Class="ConquiánCliente.View.FriendList.FriendProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquiánCliente.View.FriendList"
        xmlns:language="clr-namespace:ConquiánCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.FriendProfile}" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Grid>
        <Image Source="/Resources/backgroundLogin.jpg" Stretch="UniformToFill" />

        <Border BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="2"
                Background="{StaticResource PrimaryBackgroundBrush}"
                CornerRadius="10"
                Padding="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="600" MinWidth="550">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" Color="Black" Opacity="0.25" BlurRadius="20"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.Profile}" 
                           Style="{StaticResource TitleTextBlock}" 
                           Margin="0,0,0,20"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Width="100" Height="100" BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="1" Margin="0,0,20,0" VerticalAlignment="Top">
                        <Image/>
                    </Border>

                    <Label Grid.Row="0" Grid.Column="1" Content="{x:Static language:Lang.GlobalLevel}" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <TextBlock x:Name="txtBxLevel" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}" Margin="5,0,0,0"/>

                    <Label Grid.Row="1" Grid.Column="1" Content="{x:Static language:Lang.GlobalNickname}" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtBxNickname" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}" Margin="5,5,0,0"/>

                    <Label Grid.Row="2" Grid.Column="1" Content="{x:Static language:Lang.GlobalEmail}" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,10,0,0"/>
                    <TextBlock x:Name="txtBxEmail" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}" Margin="5,10,0,0"/>

                    <Label Grid.Row="3" Grid.Column="1" Content="{x:Static language:Lang.GlobalSocial}" FontWeight="Bold" Margin="0,15,0,5" VerticalAlignment="Top" Foreground="{StaticResource PrimaryTextBrush}"/>

                    <Image Grid.Row="4" Grid.Column="1" Source="/Resources/facebook.png" Width="24" Height="24" Margin="0,5,10,5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="txtBxFacebook" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}" Margin="5,5"/>

                    <Image Grid.Row="5" Grid.Column="1" Source="/Resources/instagram.png" Width="24" Height="24" Margin="0,5,10,5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="txtBxInstagram" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}" Margin="5,5"/>
                </Grid>

                <Button Grid.Row="2" Content="{x:Static language:Lang.GlobalBack}"
                        Foreground="{StaticResource ForgotPasswordTextBrush}" 
                        FontSize="14"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>